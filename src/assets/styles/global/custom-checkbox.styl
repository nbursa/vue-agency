.custom-checkbox {
  input[type="checkbox"] {
    display: none;
    &:checked + label{
      &:before{
        background: $primary;
        border-color: $primary;
      }
    }
  }
  label {
    position: relative;
    cursor: pointer;
    width: 100%;
    display block
    user-select: none
    &:before{
      content: '';
      width: 16px;
      height: 16px;
      background:white;
      position: absolute;
      right:0;
      top:4px;
      border-radius:3px;
      border: 1px solid #dfe6eb;
      transition: all .2s ease;
    }
    &:after{
      content: '';
      position: absolute;
      right: 5px;
      top: 6px;
      width: 5px;
      height: 9px;
      border-style: solid;
      border-width:0 2px 2px 0;
      border-color:white;
      transform: rotate(45deg)
    }
  }
}
