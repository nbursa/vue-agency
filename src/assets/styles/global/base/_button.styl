.btn
  height 40px
  border-radius 6px
  color white
  justify-content space-between
  padding 0 30px
  border 0
  outline 0
  cursor pointer
  user-select none
  font-size 1em
  background-size 200% auto
  box-shadow: 0 4px 6px rgba(50,50,93,.11), 0 1px 3px rgba(0,0,0,.08)
  background-image linear-gradient(225deg, $primary 0%, $primaryLight 50%, $primaryLight 50%,  $secondary 100% )
  //background: linear-gradient(225deg, #4687FF 0%, #4E5C6F 100%);
  transition 0.5s

  span
    color white

  &:hover
    box-shadow 0 0 0 0 rgba(0,0,0,0.1)
    background-position right center


