.tree-lines
  .tree-node
    margin-top 1em
  &--children
    margin-top 1em
    background: url('~@/assets/static/agency-setup/job-types/line-full.svg') repeat-y
    background-position-x 0.7em
    .grade-input{
      padding: 12px !important;  
    }
    .onboarding-input{
      input {
        height: 50px !important;
      }  
    }
    .grade-input.input{
      height 50px !important;
      padding: 0 20px !important;
    }
    .tree-node
      position relative
      background: url('~@/assets/static/agency-setup/job-types/line-l.svg') repeat-y
      background-position-y -1em
      &:after
        content: ''
        position absolute
        left -1.18em
        top 0px
        width 15px
        height 50px
        background:#fff url('~@/assets/static/agency-setup/job-types/line-l.svg') repeat-y
      &--box
        margin-top 0em
        &:not(:first-child)
          margin-top 1em

    .tree-input
      position relative
      padding-left 0
      &:first-child
        margin-top 0
      &:last-child
        &:after
          content ''
          position absolute
          left -1.18em
          top 0px
          width 15px
          height 50px
          background url('~@/assets/static/agency-setup/job-types/line-half.svg') no-repeat
          background-color #fff


