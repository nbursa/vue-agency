@import '~@/assets/styles/global/variables';

.invoice-panel
  margin 0px 20px
  padding 20px
  border-radius 3px
  background-color #FFFFFF
  box-shadow 0 2px 9px 0 rgba(0,0,0,0.15)
  @media (max-width: $display-small-desktop) {
    padding 20px 10px;
  }
  .name
    margin-top -15px
    opacity 0.6
    color #2F3439
    font-size 32px
    font-weight bold
    text-align left
    border-bottom 1px solid rgba(211,211,211, .6)
    @media (max-width: $display-small-desktop) {
      font-size 20px
    }
  &__item
    margin-top 7px
    padding-top 7px
    display flex
    flex-wrap wrap
    justify-content space-between
    align-items center

    &.has-border
      border-top 1px solid rgba(211,211,211, .6)

    &.last-item
      margin-bottom 20px
      padding-bottom 10px
      border-bottom 1px solid rgba(211,211,211, .6)


    @media (max-width: $display-small-desktop) {
      flex-direction: column;
      align-items: flex-start;
    }
  &__job-list
    text-align left
    font-size 0.875rem
    padding-bottom 10px
    span
      padding-right 10px
    .job-list-label
      opacity 0.4
      padding-bottom 7px
      color #000

  &__note
    textarea
      resize none
      width 100%
      height 100px
      outline none
      box-shadow none
    .note-label
      opacity 0.4
      padding-bottom 7px
      color #000
      text-align left
    .note-text
      text-align left
  &__label
    color #000000
    opacity 0.4
    text-align left
    min-width 120px
  .value
    color #2F3439
    font-size 24px
    @media (max-width: $display-small-desktop) {
      font-size 20px
    }
    &--small
      font-size 16px