@import '~@/assets/styles/global/colors';

.rate {
    position: relative;
    min-height: 65px;
    border: 1px solid $darkGray;
    border-radius: 3px;
    margin-bottom: 10px;
    margin-top: 1em;
    &--highlight {
        border-color: $primary;
    }

    &__label {
        opacity: 0.99;
        pointer-events: none;
        transition: all 0.15s ease;
        z-index: 1;
        font-size: 1.125rem;
        position: absolute;
        color: $fontGray;
        top: 50%;
        transform: translateY(-50%);
        left: 20px;

        &--active {
            font-size: 0.8125rem;
            top: 15px;
        }
    }

    &__dropdown {
        outline: none;
        .vue-treeselect {
            &__single-value{
              line-height 38px
            }
            &__input-container {
                padding-left 15px
            }
            &__single-value {
                padding-left 15px
            }
            &__control {
                border: 0;
                margin-top: 25px;
                padding-bottom: 5px;
                outline: none;
                font-weight: 600;
            }

            &__multi-value {
                margin-left: 15px;
            }

            &__multi-value-item {
                background-color: #D5F7D2;
                color: black;
                min-width: 125px;
                min-height: 30px;
                font-weight: normal;
                font-size: 1rem;
            }

            &__multi-value-label {
                padding-left: 10px;
            }

            &__value-remove {
                border-left: none;

                svg {
                    width: 12px;
                    height: 12px;
                    padding: 2px;
                    border-radius: 50%;
                    background-color: white;
                    color: #3B6177;
                }
            }
            &__menu-container {
                z-index: 8 !important;
            }
            &__menu {
                z-index: 4;
                left: -1px;
                right: -1px;
                margin-top: 5px;
                border-radius: 3px;
            }

            &__control-arrow-container {
                display: none;
            }
        }
    }
}


#agency-container{
   .rate {
    min-height: 60px;

    &__label {
      &--active {
        top: 16px;
      }
    }

    &__dropdown {
      .vue-treeselect__control {
        margin-top: 20px;
        input{
          outline: none;
        }
      }
    }
  }
}
