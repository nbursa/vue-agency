.section {
  margin-top: 1.25rem;
  padding: 0rem 1.875rem;
}

.job-submit-content-box {
  max-width: 1500px;
  width: 100%;
  height: 100%;
  margin: 0 auto;

  .job-left-panel {
    padding: 3em 1.5em 10em 1.5em;
    height: 100%;
    &.has-border {
      border-right: 1px solid #DFE6EB;
    }
  }

  .job-mid-panel {
    border-right: 1px solid #DFE6EB;
  }

  .default-placeholder {
    margin-top: 35%;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;

    img {
      width: 80%;
    }

    h2 {
      margin: 1.3em 0;
    }

    p {
      text-align: center;
      color: #848693;
    }
  }

  .job-list {
    width: 90%;
    margin: 1em auto;
    padding-bottom: 5em;
    @media (max-width: $display-small-desktop) {
      width: 100%;
    }

    li {
      margin-top: 1em;
      @media (max-width: $display-small-desktop) {
        margin-top: 14px;
      }
    }
    &.is-linked {
      li {
        position: relative;
        &:not(:first-child) {
          &:before {
            content: "";
            position: absolute;
            background: #264B5E;
            width: 2px;
            height: 36px;
            right: -18px;
            top: -25px;
          }
        }

        &:after {
          position: absolute;
          content: "";
          border-radius: 50%;
          background: #264B5E;
          width: 10px;
          height: 10px;
          right: -22px;
          top: 50%;
          transform: translateY(-50%);
        }
      }
    }
  }

  .is-custom {
    padding: 1em;
    background-color: white;
  }

  .panel {
    border-radius: 4px;
    background-color: #FFFFFF;
    box-shadow: 0 4px 10px 0 rgba(0, 0, 0, 0.08);
    position: relative;

    &--overflow {
      height: 65vh;
      overflow-y: auto;
      display: block;
    }
  }

  .panel-heading:first-child {
    color: $fontDark;
    font-size: 0.875rem !important;
    line-height: 1.188rem;
    padding: 20px 30px;
    border: 0;
    border-radius: 3px 3px 0 0;
    border-bottom: 1px solid #DFE6EB;
  }

  .panel-block {
    position: relative;
    border: 0;
    border-radius: 3px 3px 0 0;
    margin: 4px 0px;
  }

  .panel-footer {
    width: 100%;
    z-index: 9;
    background-color: #fff;
    border: 0;
    border-radius: 0 0 4px 4px;
    padding: 0.8em;
    box-shadow: 0 -2px 5px 1px rgba(0, 0, 0, 0.03);

    button {
      margin-right: 1em;
    }
  }

  .panel-heading {
    background-color: white;
    color: orange;
    width: 100%;
    z-index: 3;
  }
}