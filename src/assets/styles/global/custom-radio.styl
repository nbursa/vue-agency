.custom-radio {
  input[type="radio"] {
    display: none;
    &:checked + label{
      background-color: #EDF3F6;
      &:after{
        opacity: 1;
      }
    }
  }
  label {
    position: relative;
    cursor: pointer;
    width: 100%;
    display block
    user-select: none
    padding: 4px 40px 0px 7px;
    font-size: 13px;
    border-radius: 3px;
    margin-bottom: 3px;
    transition: $t-hover;
    &:before{
      content: '';
      width: 10px;
      height: 10px;
      background:white;
      border: 1px solid #9013FE;
      border-radius: 50%;
      position: absolute;
      right:6px;
      top:6px;
    }
    &:after{
      content: '';
      position: absolute;
      right: 8px;
      top: 8px;
      width: 6px;
      height: 6px;
      border-radius: 50%;
      background: #9013FE;
      opacity: 0;
    }
  }
}
